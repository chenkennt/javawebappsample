node {
  stage('init') {
    checkout scm
  }
  
  stage('build') {
    sh 'mvn clean package'
  }
  
  stage('deploy') {
    def resourceGroup = 'kenchenwebapp1'
    def webAppName = 'kenchenwebapp1'
    def registryServer = 'kenchenacrtest.azurecr.io'
    def imageTag = sh script: 'git describe | tr -d "\n"', returnStdout: true
    def imageName = "$registryServer/calculator"
    azureWebAppPublish azureCredentialsId: 'vs_china_jenkins', publishType: 'docker', resourceGroup: resourceGroup, appService: webAppName, dockerFilePath: 'Dockerfile', dockerImageName: imageName, dockerImageTag: imageTag, dockerRegistryEndpoint: [credentialsId: 'kenchenacrtest', url: "http://registryServer"]
  }
}
